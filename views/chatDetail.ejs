<!DOCTYPE html>
<html >
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="/main.css" rel="stylesheet" />
</head>
<body>
    <%- include('nav.ejs') %>

    
    
    <div class="detail-bg">
        <h4><%= result.title %></h4>
        <p><%= result.content %></p>
        <p><%= result.user %></p>

        <a href="/chat/request?writerId=<%= result.user %>">채팅하기</a>

        <hr style="margin-top: 60px">
        <div>
            <% for (let i = 0; i < result2.length; i++) { %>
                <p><strong><%= result2[i].writer %></strong> <%= result2[i].content %></p>
            <% } %> 
            </div>
            
            <input name="content">
            <input name="parentId" value="<%= result._id %>" style="display: none">
            <button type="submit">댓글작성</button>
        
    </div> 

    <script src="https://cdn.jsdelivr.net/npm/socket.io@4.7.2/client-dist/socket.io.min.js"></script>
    <script>
    const socket = io() 
    // 방이름 , 데이터 
    socket.emit('ask-join', '1')
    document.querySelector('.chat-button').addEventListener('click', () =>{
        socket.emit('message', {msg : '반가워', room : '1'})
    })

    // 유저가 서버에서 보낸 데이터 받을 때 
    // 서버 코드랑 똑같음
    socket.on('데이터이름', (data) => {

    })
    </script>

</body>
</html>